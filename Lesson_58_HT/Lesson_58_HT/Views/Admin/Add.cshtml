@{
    ViewData["Title"] = "Admin | Add";
}

@section MyCSS {
    <link href="~/css/admin.css" rel="stylesheet" />
}

@model Product

<h3 class="AdminPanel_Info">
        Add new product
    </h3>
    <p class="AdminPanel_Choose">
        Enter all required info in the input fileds
    </p>

    <form class="Add_Form" asp-action="Add" method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>

        <label asp-for="Name">Enter product name</label>
        <input asp-for="Name">

        <label asp-for="Quantity">Enter product quantity</label>
        <input asp-for="Quantity">

        <label asp-for="Price">Enter product price</label>
        <input asp-for="Price">

        <label for="name">Choose the product image</label>

        <div class="ChooseBtn_Container">
        <input type="file" name="productImg" id="productImg" class="inputfile inputfile-1"
                data-multiple-caption="{count} files selected" multiple />
        <label for="productImg">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                    <path
                        d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" />
                </svg> <span>Choose a file&hellip;</span></label>
        </div>


        <input class="Submit" type="submit" value="Submit">
    </form>


    <script src="~/js/add.js"></script>

