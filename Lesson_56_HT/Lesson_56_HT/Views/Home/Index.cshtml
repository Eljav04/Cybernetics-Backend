@model List<City>

@{
    ViewData["Title"] = "Home Page";
}

@section MyLinkCSS {
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}

<section class="Slider-Section">
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="true">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/media/Slider/083018-Cover-Italy-Positano.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/media/Slider/Most-Visited-Countries-in-the-World-1.jpg" class="d-block w-100"
                     alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/media/Slider/seigantoji-pagoda-japan-shutterstock_189118511_bdc0eb254a.jpeg"
                     class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
<section class="Info-Section">
    <h1 class="h1 ">
        Follow Travello everywhere and open new incredible places around whole the world
    </h1>
    <p class="lead">
        Lorem ipsum dolor sit amet consectetur, adipisicing elit. In similique possimus perspiciatis officia
        ipsum nesciunt, ullam ipsam blanditiis reiciendis veniam necessitatibus. Vel minima dolor, id modi,
        fugiat voluptatum natus veniam explicabo qui facilis consectetur sed culpa omnis at porro! Quia
        aspernatur reprehenderit sit laudantium aliquam modi asperiores officia laborum? Minus.
    </p>
</section>
<section class="Card-Section mt-4">
    @foreach(City city in Model)
    {
        @await Html.PartialAsync("Partials/_HomeCards",city)
    }
</section>
